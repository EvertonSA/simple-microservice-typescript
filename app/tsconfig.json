{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "outDir": "./dist/cache/ts",
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "src/*"
      ],
      "@public/*": [
        "public/*"
      ]
    },
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*",
    "./public/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}